#----------- alias -----------------------------------------------------------#

alias ls='ls -l -h -G --time-style=+\ %d\ %b\ %Y\ %H:%M --color=auto --group-directories-first'
alias lsa='ls -Al -h -G --time-style=+\ %d\ %b\ %Y\ %H:%M --color=auto --group-directories-first -v'
alias cp='cp -iv'
alias mv='mv -iv'
alias rm='rm -iv'
alias c='clear'
alias cc='cd && clear'
alias cl='cdl'                                      # cd and ls directory
alias ..='cd ..'                                    # cd to parent directory
alias d='exit'
alias al='$HOME/Scripts/alias'                      # list aliasses
alias be='nvim $HOME/Websites/fvb/blog.html'        # new blog entry nvim
alias bkb='$HOME/Scripts/bspwm_keybindings'         # list bspwm keybindings
alias dl='duckgo'                                   # ddg search and open in lynx
alias dq='ddgr'                                     # ddg search and open in qutebrowser
alias diff='diff --color=auto'
alias dkb='$HOME/Scripts/dwm_keybindings'           # list dwm keybindings
alias f='fzf'                                       # fzf
alias f.='ch'                                       # fzf and cd in hidden directory
alias fc='cf'                                       # fzf and cd in directory
alias ff='fifo'                                     # fzf given string in files
alias fh='hst'                                      # fzf term command history > clipboard
alias fk='fkill'                                    # fzf and kill proces
alias fm='macho'                                    # fzf man pages
alias fo='fox'                                      # fzf and open with default app
alias fp='fzp'                                      # fzf --preview --preview-window "right:70%"
alias fpdf='pdf'                                    # fzf pdf and open in zathura
alias fv='vif'                                      # fzf and open in nvim
alias fz='cd $HOME/Notes/zet && fifo'               # fzf given string in 'zettelkast' notes
alias grep='grep --color=auto'
alias kmon='kmon -c green'                          # kernel manager and monitor
alias less='less -R'
alias lg='lazygit'                                  # lazygit
alias lgd='cd $HOME/.dotfiles && lazygit'           # lazygit .dotfiles
alias lgw='cd $HOME/Websites/fvb && lazygit'        # lazygit website fvb
alias md='mkdir'                                    # create new directory
alias mf='touch'                                    # create new file
alias moc='mocp -T /usr/share/moc/themes/transparent-background'
alias ms='$HOME/Scripts/mkscript'                   # create new script
alias mwg='monero-wallet-gui'                       # monero wallet
alias nn='nvim -c startinsert $HOME/Notes/new.md'   # open new note in nvim, sn to save
alias nt='nvim $HOME/Notes/trade/-template.md'      # open new trade note, ts to save
alias pacf='pacfd'                                  # pacman fzf find pkg > clipboard
alias pacl='pacls'                                  # pacman fzf list installed pkgs > clipboard
alias pacman='sudo pacman --color=always'
alias pacr='$HOME/Scripts/pacr'                     # pacman fzf remove given pkg (incl deps & confs)
alias pacro='pacman -Qtdq | pacman -Rns -'          # pacman remove orphans
alias pacs='$HOME/Scripts/pacs'                     # pacman fzf install
alias parf='parufd'                                 # paru aur fzf find aur pkg > clipboard
alias parl='paruls'                                 # paru aur fzf list installed aur pkgs > clipboard
alias pars='$HOME/Scripts/pars'                     # paru aur fzf install
alias pm='passmenu'                                 # passwords ih dmenu
alias suck='rm -f config.h ; sudo make install'     # source suckless programs
alias sudo='sudo '
alias sz='source $HOME/.config/zsh/.zshrc'          # reload zsh config (.zshrc)
alias td='tty-clock -C4 -c -f "%a %d %b %Y"'        # time date tty-clock
alias tma='tmux attach-session'                     # attach to last session
alias tmat='tmux attach-session -t'                 # attach to session with given name
alias tmls='tmux list-sessions'                     # list all sessions
alias tmns='tmux new-session -s'                    # start new session with given name
alias um='dunstify $(date +%s)'                     # dunst unix milles (unix time in seconds)
alias upd='pacman -Syu'                             # system upgrade
alias v='nvim'
alias vc='nvim $HOME/.config/nvim/init.vim'         # open nvim config (init.vim)
alias vf='$HOME/.config/vifm/scripts/vifmrun'       # run the file manager
alias vz='nvim $HOME/.config/zsh/.zshrc'            # open zsh config (.zshrc)
alias yf='ytfzf'                                    # youtube video fzf search and view
alias yp='pipe-viewer'                              # youtube video search and view
alias yt='$HOME/Scripts/yt'                         # simple youtube fzf search and view


