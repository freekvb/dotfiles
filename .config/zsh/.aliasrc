#----------- alias -----------------------------------------------------------#

alias ls='ls -l -h -G --time-style=+\ %d\ %b\ %Y\ %H:%M --color=auto --group-directories-first'
alias lsa='ls -Al -h -G --time-style=+\ %d\ %b\ %Y\ %H:%M --color=auto --group-directories-first -v'
alias cp='cp -iv'
alias mv='mv -iv'
alias rm='rm -iv'
alias c='clear'
alias cc='cd && clear'
alias d='exit'
alias al='$HOME/Scripts/alias'
alias be='nvim $HOME/Websites/fvb/blog.html'
alias bkb='$HOME/Scripts/bspwm_keybindings'
alias ddg='ddgr'                                    # ddg search and open in qutebrowser
alias dg='duckgo'                                   # ddg search and open in lynx
alias diff='diff --color=auto'
alias dkb='$HOME/Scripts/dwm_keybindings'
alias dvtm='dvtm-status -M'
alias f='fzf'                                       # fzf
alias fc='cd_with_fzf'                              # fzf and cd in directory
alias ff='fif'                                      # fzf find in files
alias fk='fkill'                                    # fzf and kill proces
alias fm='macho'                                    # fzf man pages
alias fo='open_with_fzf'                            # fzf and open with default app
alias fp='fzp'                                      # fzf --preview
alias fv='fzf_open_with_nvim'                       # fzf and open in nvim
alias ga='git add'
alias gc='git commit -m'
alias gp='git push'
alias gs='git status'
alias gotop='gotop -a'                              # system monitor
alias grep='grep --color=auto'
alias ik='$HOME/Scripts/ict_mt4_indicators'         # indicator keybindings (ict mt4)
alias kmon='kmon -c green'                          # kernel manager and monitor
alias less='less -R'
alias lg='lazygit'                                  # lazygit
alias lgd='cd $HOME/.dotfiles && lazygit'           # lazygit .dotfiles
alias lgw='cd $HOME/Websites/fvb && lazygit'        # lazygit website fvb
alias md='mkdir'
alias mf='touch'
alias moc='mocp -T /usr/share/moc/themes/transparent-background'
alias ms='$HOME/Scripts/mkscript'
alias mwg='monero-wallet-gui'                       # monero wallet
alias nf='nnn -c -H -T v'                           # file manager
alias nn='nvim -c startinsert $HOME/Notes/new.md'   # open new note in nvim, sn to save
alias nt='nvim $HOME/Notes/trade/-template.md'      # open new trade note, ts to save
alias pacman='sudo pacman --color=always'
alias pacf='$HOME/Scripts/pacf'                     # pacman fzf installed show in less
alias pacr='pacman -Rns '                           # pacman fzf remove (incl deps & confs)
alias pacro='pacman -Qtdq | pacman -Rns -'          # pacman remove orphans
alias pacs='$HOME/Scripts/pacs'                     # pacman fzf install
alias pars='$HOME/Scripts/pars'                     # paru aur fzf install
alias pm='passmenu'
alias server='python3 -m http.server'               # simple server
alias su='su -'
alias suck='rm -f config.h ; sudo make install'     # source suckless programs
alias sudo='sudo '
alias sz='source $HOME/.config/zsh/.zshrc'
alias tm='tty-clock -C4 -c -f "%a %d %b %Y"'
alias uc='ucollage'                                 # image viewer
alias upd='pacman -Syu'                             # system upgrade
alias v='nvim'
alias vc='nvim $HOME/.config/nvim/init.vim'         # open nvim config (init.vim)
alias vf='$HOME/.config/vifm/scripts/vifmrun'       # the file manager
alias vz='nvim $HOME/.config/zsh/.zshrc'            # open zsh config (.zshrc)
alias yf='ytfzf -t'                                 # youtube video fzf search and view
alias yp='pipe-viewer'                              # youtube video search and view
alias yt='$HOME/Scripts/yt'                         # simple youtube fzf search and view


