xrandr --output HDMI-1 --mode 1920x1080
xsetroot -cursor_name left_ptr
setxkbmap -option caps:escape
xset r rate 750 50
xset dpms 0 0 0
xrandr --dpi 96
xset s off

~/.fehbg &
udiskie &
dunst &
picom &
clipmenud &
mega-cmd-server &
unclutter --timeout 2 &
pamixer --set-volume 25 &
