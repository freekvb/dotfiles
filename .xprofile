mpv --no-video ~/Documents/sounds/appear.mp3 &
xrandr --output HDMI-1 --mode 2560x1080 &
xsetroot -cursor_name left_ptr &
setxkbmap -option caps:escape &
xset dpms 1800 1800 1800 &
xset r rate 750 50 &
xset s off &

dunst &
picom &
udiskie &
clipmenud &
$HOME/.fehbg &
mega-cmd-server &
unclutter --timeout 2 &
pamixer --set-volume 30 &
