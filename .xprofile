xrandr --output HDMI-1 --mode 1920x1080
xsetroot -cursor_name left_ptr
setxkbmap -option caps:escape
xset dpms 1800 1800 1800
xset r rate 750 50
xrandr --dpi 96
xset s off

dunst &
picom &
udiskie &
~/.fehbg &
clipmenud &
mega-cmd-server &
unclutter --timeout 2 &
pamixer --set-volume 25 &
